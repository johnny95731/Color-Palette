{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["**/*.ts", "**/*.d.ts", "**/*.tsx", "**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": "./",
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "lib": [
      "es2022",
      "dom"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "types/*": ["./src/features/types/*", "./src/types/*"],
      "stores/*": ["./src/features/stores/*"]
    }
  }
}
